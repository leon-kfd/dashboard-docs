---
import Page from '../components/Layout/Page.astro'
import FAQ from '../components/FAQ.md'
---
<style lang="scss" is:global>
.faq-md {
  position: relative;
  h3 {
    color: #43434b;
    font-weight: bold;
    font-size: 18px;
    display: inline-block;
    position: relative;
    margin-top: 30px;
    margin-bottom: 10px;
    &::before {
      content: 'ðŸ”·'
    }
  }
  p {
    color: #56565c;
    font-size: 16px;
    line-height: 1.5;
    code {
      display: inline-block;
      padding: 0 2px;
      background: #fff2f2;
      border-radius: 2px;
      margin: 0 2px;
      font-size: 13px;
      font-weight: bold;
      font-family: inherit;
    }
  }

  a {
    color: #1166d4;
    text-decoration: none;
    font-size: 16px;
    word-break: break-all;
  }
  a:hover {
    color: #b3860d;
    text-decoration: underline;
  }
  a:focus {
    outline-offset: -2px;
  }

  dl,
  ol,
  ul {
    margin-top: 8px;
    margin-bottom: 10px;
    padding-left: 20px;
    line-height: 1.8;
  }
  ol p,
  ul p {
    margin-bottom: 0px;
  }
  li {
    margin-bottom: 0.2em;
    margin-top: 0.2em;
    list-style: circle;
  }
}
</style>

<Page>
  <div class="faq-md">
    <FAQ />
  </div>
</Page>